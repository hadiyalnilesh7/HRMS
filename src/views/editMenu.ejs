<%- include("./layouts/header") %>
<%- include("./layouts/sidebar") %>

<div class="dashboard-container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><i class="fa-solid fa-pen-to-square me-2 text-primary"></i> Edit Menu Item</h5>
          <a href="/menu" class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-times"></i></a>
        </div>
        <div class="card-body p-4">
          <form action="/menu/update" method="POST">
            <input type="hidden" name="id" value="<%= menuItem._id %>">

            <div class="mb-3">
              <label for="name" class="form-label">Item Name</label>
              <input type="text" id="name" class="form-control" name="name" value="<%= menuItem.name %>" required />
            </div>

            <div class="mb-3">
              <label for="category" class="form-label">Category</label>
              <% if (selectedMenuCategories && selectedMenuCategories.length > 0) { %>
                <select id="category" class="form-select" name="category" required>
                  <option value="">Select Category</option>
                  <% selectedMenuCategories.forEach(category => { %>
                     <option value="<%= category %>" <%= menuItem.category === category ? 'selected' : '' %>><%= category %></option>
                  <% }) %>
                </select>
              <% } else { %>
                 <input type="text" class="form-control" value="<%= menuItem.category %>" disabled>
              <% } %>
            </div>

            <div class="mb-4">
              <label for="price" class="form-label">Price (₹)</label>
              <div class="input-group">
                <span class="input-group-text">₹</span>
                <input type="number" id="price" class="form-control" name="price" value="<%= menuItem.price %>" step="0.01" required />
              </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <a href="/menu" class="btn btn-outline-secondary px-4">Cancel</a>
              <button type="submit" class="btn btn-primary px-4"><i class="fa-solid fa-save me-2"></i> Update Item</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("./layouts/footer") %>
