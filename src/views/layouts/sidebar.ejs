      </a>
      <a href="/menu" class="nav-link <%= (typeof currentPage !== 'undefined' && currentPage === 'menu') ? 'active' : '' %>">
        <i class="fa-solid fa-utensils"></i> <span>Menu</span>
      </a>
      <a href="/order" class="nav-link <%= (typeof currentPage !== 'undefined' && currentPage === 'order') ? 'active' : '' %>">
        <i class="fa-solid fa-shopping-bag"></i> <span>Orders</span>
      </a>
      <a href="/settings" class="nav-link <%= (typeof currentPage !== 'undefined' && currentPage === 'settings') ? 'active' : '' %>">
        <i class="fa-solid fa-gear"></i> <span>Settings</span>
      </a>
    </nav>

    <div class="sidebar-footer">
      <a href="/logout" class="nav-link text-danger" data-confirm="Are you sure you want to logout?">
        <i class="fa-solid fa-sign-out-alt"></i> <span>Logout</span>
      </a>
    </div>
  </aside>

